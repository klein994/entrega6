
{{#if hayProductos}}

<h2>Lista de Articulos</h2>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <tr>
            <th>ID</th>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Eliminar</th>
        </tr>
        {{#each productosN}}
        <tr>
            <td>{{this.id}}</td>
            <td><img src="{{this.thumbnail}}" width="40" alt=""></td>
            <td>{{this.tittle}}</td>
            <td>{{this.price}}</td>
            <td>  <button class="btn btn-danger" disabled>Eliminar</button></td>
        </tr>
        {{/each}}
    </table>
</div>
{{else}}
<p class="alert alert-warning">No hay Art√≠culos para mostrar...</p>
{{/if}}